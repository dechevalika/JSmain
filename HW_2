//Задача 1.
let a = 1;
let b = 1;
let c;
let d;
c = ++a;
alert(c); // 2, т.к. значение переменной a увеличили на 1 (1+1=2), потому что икремент стоит перед операндом
d = b++;
alert(d); // 1, т.к. значение переменной b = 1, а инкремент находится после операнда b, сответственно к b прибавляется 1, но возвращается первоначальное значение
c = (2+ ++a);
alert(c); // 5, т.к. в предыдущей операции операнд a стал =2, соответственно, в этой операции операнд стал =3 (2+3=5)
d = (2+ b++);
alert(d); // 4, т.к. в предыдущей операции операнд b стал =2, то в этой операции будет =3, но постинеремент вернет значение к 2 (2+2=4)
alert(a); // 3, т.к. в последнем операнде хранится значение 3, т.е. переменная a содержала значение 1, после выполнения инкремента ++a значение увеличивалось на 1
alert(b); // 3, т.к. в последнем операнде хранится значение 3, т.е. переменная b содержала значение 1, после выполнения инкремента b++ значение увеличивалось на 1, но возвращало предыдущее значение

//Задача 2.
console.log(null || 2 || undefined ); // выведется 2, т.к. null - false, 2 - true и это первое истинное значение (или возвращает первое истинное значение)
console.log( 1 && null && 2 ); //выведется null, т.к. 1-true, null-false и это первое ложное значение (и возвращает первое ложное значение)

//Задача 3.

function calcOperation () {
let a = 2;
let b = 0;
if (a > 0 &&  b > 0 ) {
 return a-b;
 }
 else if (a < 0 && b < 0) {
  return a*b;
  }
 else if (a < 0 && b > 0 || a > 0 && b < 0) {
  return a+b;
  }
}
console.log (calcOperation);


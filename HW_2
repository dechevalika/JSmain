//Задача 7.
alert( null > 0 );  //неверно, так как знак сравнения преобразует null в 0
alert( null == 0 ); // неверно, так как при равенстве null не преобразуется в 0, соответственно они не равны друг другу
alert( null >= 0 ); //это верное, так как 0 больше либо РАВНО 0, а 0=0
